<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 设置背景色（黑色） -->

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <gradient
                android:endColor="#c7cbd1"
                android:startColor="#c7cbd1" />
        </shape>
    </item>

    <!-- 设置进度条颜色（白色） -->

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:endColor="#2294c9"
                    android:startColor="#2294c9" />
            </shape>
        </clip>
    </item>

</layer-list>