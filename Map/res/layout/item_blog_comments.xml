<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="#ffffff"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/item_log_replay_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="小帮"
        android:textColor="#516679"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/item_log_replay_comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="斯蒂芬金黄色卡迪夫哈市地方经济"
            android:textColor="#636363" 
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/item_comment_content_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_comment_voice_play_board"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" 
            android:visibility="gone">

            <TextView
                android:id="@+id/item_comment_record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="12"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="&quot;"
                android:textSize="14sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" >

                <!-- 以下2个元素，根据播放状态设为可见和不可见 -->

                <ImageView
                    
                    android:id="@+id/item_comment_record_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_comment_voice_play_click_to_play"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/item_comment_record_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_comment_voice_play_click_to_stop"
                    android:visibility="visible" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>