<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#efefed">
    
<RelativeLayout
        android:id="@+id/nbs_rlt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_title" >

        <Button
            android:id="@+id/nbs_top_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_top_back"
            android:text="@string/back"
            android:textColor="#ffffff" />

        <LinearLayout
            android:id="@+id/nbs_ll_centerLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/nbs_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="@string/trip_title_nbs"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout 
            android:id="@+id/nbs_ll_mytop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingLeft="105dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
            <ImageView 
                android:id="@+id/nbs_top_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_female_m"/>
            <TextView 
                android:id="@+id/nbs_top_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二帮"
                android:layout_marginLeft="5dp"
                android:textColor="#938876"
                android:textSize="18sp"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/nbs_ll_mybottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nbs_ll_mytop"
            android:background="#73d3df"
            android:paddingLeft="105dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            
            <TextView 
                android:id="@+id/nbs_top_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="二帮梵蒂冈地方干豆腐干大股东郭德纲饭馆地方干豆腐干大股东郭德纲腹股沟"
                android:layout_marginRight="5dp"
                android:textColor="#ffffff"
                android:textSize="14sp"/>
        </LinearLayout>
        <ImageView 
            android:id="@+id/nbs_top_avatar"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/avatar_l"/>
    </RelativeLayout>
    
    <ListView
        android:id="@+id/nbs_lv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#ffffff"
        android:divider="#cbcaca"
        android:layout_weight="100"
        android:overScrollMode="always"
        android:scrollbars="none" >
    </ListView>
    <Button 
        android:id="@+id/nbs_btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_nbs_require"
        android:text="@string/nbs_send"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>
    
</LinearLayout>