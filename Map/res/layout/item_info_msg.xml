<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7f7f7f"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_info_msg_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:id="@+id/item_info_msg_con_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/info_msg_con_avatar_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/info_msg_con_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_fr_avatar" />

                <TextView
                    android:id="@+id/info_msg_con_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="二帮"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_info_msg_con_r"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/info_msg_con_avatar_ll"
                android:background="@drawable/bg_info_conversation"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/item_info_msg_con_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="22:22"
                    android:layout_marginLeft="3dp"
                    android:textColor="#ffffff" 
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/item_info_msg_con_con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="说都发送端发送随碟附送发送发送放松放松"
                    android:lines="1"
                    android:ellipsize="end"
                    
                    android:textColor="#ffffff" 
                    android:textSize="16sp"/>
            </LinearLayout>
        </RelativeLayout>
        
        
        
        
        <RelativeLayout
            android:id="@+id/item_info_msg_danger_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible" >

            <LinearLayout
                android:id="@+id/info_danger_con_avatar_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/info_danger_con_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_fr_avatar" />

                <TextView
                    android:id="@+id/info_danger_con_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="危险警报"
                    android:textColor="#ff0000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_info_danger_con_r"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/info_danger_con_avatar_ll"
                android:background="@drawable/bg_info_danger"
                android:orientation="vertical"
                
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/item_info_danger_con_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="22:22"
                    android:layout_marginRight="3dp"
                    android:textColor="#000000" 
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/item_info_danger_con_con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="说都发送端发送随碟附送发送发送放松放松"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ff0000" 
                    android:textSize="16sp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>